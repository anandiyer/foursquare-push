<!DOCTYPE html>
<html>
<head>
  <title>FoursquarePush</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="user_nav">  
	  <% if current_user %>  
	    Welcome, <%= current_user.name %>!  
	    <%= link_to "Sign Out", signout_path %>  
	  <% else %>  
	    <%= link_to image_tag("/images/signinwith-foursquare.png"), "/auth/foursquare" %>  
	  <% end %>  
	</div>
<%= yield %>

</body>
</html>
